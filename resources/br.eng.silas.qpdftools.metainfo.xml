<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>br.eng.silas.qpdftools</id>

  <name>Qpdf Tools</name>
  <summary>Manage and optimize PDF files</summary>
  <developer id="br.eng.silas">
    <name translate="no">Silas Henrique</name>
    <url>https://silas.eng.br</url>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>Unlicense</project_license>

  <description>
    <p>
      Qpdf Tools is a user-friendly Qt interface for Ghostscript and QPDF,
      designed to make PDF management simple and accessible for everyone.
    </p>
    <p>With Qpdf Tools, you can easily perform common PDF operations such as:</p>
    <ul>
      <li>Compress PDF files to reduce their size</li>
      <li>Split documents into multiple files</li>
      <li>Merge multiple PDFs into a single document</li>
      <li>Rotate PDF pages</li>
    </ul>
  </description>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="homepage">https://github.com/silash35/qpdftools</url>
  <url type="bugtracker">https://github.com/silash35/qpdftools/issues</url>
  <url type="vcs-browser">https://github.com/silash35/qpdftools</url>

  <content_rating type="oars-1.0" />
  <launchable type="desktop-id">br.eng.silas.qpdftools.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#e9b2b2</color>
    <color type="primary" scheme_preference="dark">#511717</color>
  </branding>

