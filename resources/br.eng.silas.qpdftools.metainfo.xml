<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>br.eng.silas.qpdftools</id>

  <name>Qpdf Tools</name>
  <summary>Tool for managing PDFs</summary>
  <developer_name>Silas Henrique</developer_name>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>Unlicense</project_license>

  <description>
    <p>Qpdf Tools is an Qt interface for Ghostscript and QPDF.</p>
    <p>Qpdf Tools makes possible for normal users to manage their PDFs.</p>
    <p>With Qpdf Tools, you can easily compress, split, merge and even rotate your pdf documents.</p>
  </description>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="homepage">https://github.com/silash35/qpdftools</url>
  <url type="bugtracker">https://github.com/silash35/qpdftools/issues</url>
  <url type="vcs-browser">https://github.com/silash35/qpdftools</url>

  <content_rating type="oars-1.0" />
  <launchable type="desktop-id">br.eng.silas.qpdftools.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#e9b2b2</color>
    <color type="primary" scheme_preference="dark">#511717</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/menu-screen.png?raw=true</image>
      <caption>Menu screen of Qpdf Tools</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/merge-screen.png?raw=true</image>
      <caption>Merge PDFs screen of Qpdf Tools</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/compress-screen.png?raw=true</image>
      <caption>Compress PDF screen of Qpdf Tools</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="3.1.2" date="2025-03-08">
      <url type="details">https://github.com/silash35/qpdftools/releases/tag/v3.1.2</url>
      <description>
        <p>Fix some bugs</p>
        <ul>
          <li>Fix file corruption when input file is the same of output</li>
          <li>Fix app icons on new breeze theme</li>
          <li>Update screenshots</li>
        </ul>
      </description>
    </release>
    <release version="3.1.1" date="2024-02-19">
      <url type="details">https://github.com/silash35/qpdftools/releases/tag/v3.1.1</url>
      <description>
        <p>Fix icon size</p>
        <ul>
          <li>Set the svg icon size to 128px</li>
          <li>Fix QObject warning</li>
          <li>Update screenshots</li>
        </ul>
      </description>
    </release>
    <release version="3.1.0" date="2024-02-13">
      <url type="details">https://github.com/silash35/qpdftools/releases/tag/v3.1.0</url>
      <description>
        <p>New App Icon</p>
        <ul>
          <li>Update the app icon, following KDE guidelines</li>
          <li>Make some small refinements on the user experience</li>
        </ul>
      </description>
    </release>
    <release version="3.0.1" date="2024-02-08">
      <url type="details">https://github.com/silash35/qpdftools/releases/tag/v3.0.1</url>
      <description>
        <p>Fix issue of generating invalid.pdf file</p>
      </description>
    </release>
    <release version="3.0.0" date="2024-02-06">
      <url type="details">https://github.com/silash35/qpdftools/releases/tag/v3.0.0</url>
      <description>
        <p>Upgrade to Qt6</p>
        <ul>
          <li>Fully upgrade to Qt6</li>
          <li>Improve the appearance of the menu screen.</li>
          <li>Refactor the code, making maintenance easier.</li>
          <li>And many other improvements</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
